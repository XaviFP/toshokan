# ===========================================
# TOSHOKAN PRODUCTION CONFIGURATION
# ===========================================
# Copy to .env.prod and fill in all values
# ===========================================

# --- Domains ---
TOSHOKAN_DOMAIN=api.example.com
GRAFANA_DOMAIN=grafana.example.com
LETSENCRYPT_EMAIL=admin@example.com
ALLOWED_ORIGINS=https://app.example.com,https://www.example.com

# --- Database ---
DB_USER=toshokan
DB_PASSWORD=CHANGE_ME

# --- Grafana ---
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME

# --- Admin API ---
ADMIN_HEADER_NAME=X-Admin-Token
ADMIN_HEADER_SECRET=CHANGE_ME

# --- Session ---
SESSION_EXPIRY=7200

# --- Dealer ---
UPDATE_CARD_FREQUENCY=60
INACTIVE_CARD_PERIOD=604800

# --- JWT Keys ---
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----
GENERATE_NEW_KEY
-----END PRIVATE KEY-----"

JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
GENERATE_NEW_KEY
-----END PUBLIC KEY-----"
